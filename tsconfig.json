{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@utils/*": [
        "brixsport-backend/apps/api/src/utils/*"
      ],
      "@services/*": [
        "brixsport-backend/apps/api/src/services/*"
      ],
      "@middleware/*": [
        "brixsport-backend/apps/api/src/middleware/*"
      ],
      "@routes/*": [
        "brixsport-backend/apps/api/src/routes/*"
      ],
      "@controllers/*": [
        "brixsport-backend/apps/api/src/controllers/*"
      ],
      "@config/*": [
        "brixsport-backend/apps/api/src/config/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}