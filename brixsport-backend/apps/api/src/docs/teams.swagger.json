                  "country": {
                    "type": "string"
                  },
                  "colorPrimary": {
                    "type": "string"
                  },
                  "colorSecondary": {
                    "type": "string"
                  },
                  "sport": {
                    "type": "string",
                    "enum": ["FOOTBALL", "BASKETBALL", "TRACK"]
                  },
                  "websiteUrl": {
                    "type": "string",
                    "nullable": true
                  },
                  "socialMediaLinks": {
                    "type": "object",
